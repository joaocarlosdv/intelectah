<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>INTELECTAH - @ViewData["Title"]</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>    

    <link href="~/startbootstrap-admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"> 
    <link href="~/startbootstrap-admin/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

</head>
<body id="page-top" style="background-color: dimgray">

    @if (TempData["sucesso"] != null)
    {
        <div class="alert alert-success mb-2" id="divAlertaSucesso" role="alert" style="position: absolute; top: 0; right: 0;">
            @TempData["sucesso"]
        </div>
        <script>
            setTimeout(function () {
                document.getElementById("divAlertaSucesso").style.display = "none";
            }, 3000);
        </script>
    }
    @if (TempData["alerta"] != null)
    {
        <div class="alert alert-warning mb-2" id="divAlertaWarning" role="alert" style="position: absolute; top: 0; right: 0;">
            @TempData["alerta"]
        </div>
        <script>
            setTimeout(function () {
                document.getElementById("divAlertaWarning").style.display = "none";
            }, 3000);
        </script>
    }
    @if (TempData["erro"] != null)
    {
        <div class="alert alert-danger mb-2" id="divAlertaDanger" role="alert" style="position: absolute; top: 0; right: 0;">
            @TempData["erro"]
        </div>
        <script>
            setTimeout(function () {
                document.getElementById("divAlertaDanger").style.display = "none";
            }, 6000);
        </script>
    }
    
    @RenderBody()

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>    

    <!-- Bootstrap core JavaScript-->
    <script src="~/startbootstrap-admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/startbootstrap-admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/startbootstrap-admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/startbootstrap-admin/js/sb-admin-2.min.js"></script>

    <script>
        function criarAlerta(tipo, mensagem) {
            let myBody = document.getElementById('mybody');

            let alert = document.createElement('div');
            alert.className = 'alert alert-' + tipo + ' mb-2';
            alert.role = 'alert';
            alert.id = 'msgAlerta';
            alert.style = 'position: absolute; top: 8%; right: 0;';
            alert.innerHTML = mensagem;
            myBody.appendChild(alert);

            window.scrollTo(0, 0);

            setTimeout(() => {
                $("#msgAlerta").remove();
            }, 2000);
        }
    </script>
    <script>
        function loadAnimacao(isLoading) {
            if (isLoading) {
                $("#main-loader").fadeIn(100);
                document.getElementById("overlay").style.display = "block";
            } else {
                $("#main-loader").fadeOut(100);
                document.getElementById("overlay").style.display = "none";
            }
        }
    </script>
    <script>
        const modalConfirmacao = (config) => {
            $("#modalConfirmacaoButton").unbind('click')
            $("#modalCancelarButton").unbind('click')
            $("#modalFecharButton").unbind('click')


            if (config.texto.length > 0) {
                $('#textoConfirmacao').html(config.texto)
            }

            if (config.esconderBotaoConfirmar) {
                $('#modalConfirmacaoButton').hide()
            } else {
                $('#modalConfirmacaoButton').show()
            }

            if (config.acaoConfirmar) {
                $("#modalConfirmacaoButton").disabled = true;
                $("#modalConfirmacaoButton").bind('click', config.acaoConfirmar)
            }

            if (config.acaoCancelar) {
                $("#modalConfirmacaoButton").disabled = false;
                $('#modalCancelarButton').bind('click', config.acaoCancelar)
            }

            if (config.acaoFechar) {
                $("#modalConfirmacaoButton").disabled = false;
                $('#modalFecharButton').bind('click', config.acaoFechar)
            }

            if (config.titulo) {
                $("#modalTitle").text(config.titulo)
            }

            if (config.labelCancelar) {
                $("#modalCancelarButton").text(config.labelCancelar)
            }

            if (config.labelConfirmar) {
                $("#modalConfirmacaoButton").text(config.labelConfirmar)
            }
        }

        const modalErro = (config) => {
            $("#modalConfirmacaoButtonErro").unbind('click')
            $("#modalCancelarButtonErro").unbind('click')

            if (config.texto.length > 0) {
                $('#textoConfirmacaoErro').html(config.texto)
            }

            if (config.esconderBotaoConfirmar) {
                $('#modalConfirmacaoButtonErro').hide()
            } else {
                $('#modalConfirmacaoButtonErro').show()
            }

            if (config.acaoConfirmar) {
                $("#modalConfirmacaoButtonErro").bind('click', config.acaoConfirmar)
            }

            if (config.acaoCancelar) {
                $('#modalCancelarButtonErro').bind('click', config.acaoCancelar)
            }

            if (config.titulo) {
                $("#modalTitleErro").text(config.titulo)
            }

            if (config.labelCancelar) {
                $("#modalCancelarButtonErro").text(config.labelCancelar)
            }

            if (config.labelConfirmar) {
                $("#modalConfirmacaoButtonErro").text(config.labelConfirmar)
            }
        }
    </script>

</body>
</html>
