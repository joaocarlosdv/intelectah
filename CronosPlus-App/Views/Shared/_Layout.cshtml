        function ValidarCPF(strCPF) {
            var Soma;
            var Resto;
            Soma = 0;
            if (strCPF == "00000000000") return false;
            if (strCPF == "11111111111") return false;
            if (strCPF == "22222222222") return false;
            if (strCPF == "33333333333") return false;
            if (strCPF == "44444444444") return false;
            if (strCPF == "55555555555") return false;
            if (strCPF == "66666666666") return false;
            if (strCPF == "77777777777") return false;
            if (strCPF == "88888888888") return false;
            if (strCPF == "99999999999") return false;

            for (i = 1; i <= 9; i++) Soma = Soma + parseInt(strCPF.substring(i - 1, i)) * (11 - i);
            Resto = (Soma * 10) % 11;

            if ((Resto == 10) || (Resto == 11)) Resto = 0;
            if (Resto != parseInt(strCPF.substring(9, 10))) return false;

            Soma = 0;
            for (i = 1; i <= 10; i++) Soma = Soma + parseInt(strCPF.substring(i - 1, i)) * (12 - i);
            Resto = (Soma * 10) % 11;

            if ((Resto == 10) || (Resto == 11)) Resto = 0;
            if (Resto != parseInt(strCPF.substring(10, 11))) return false;
            return true;
        }

        function criarAlerta(tipo, mensagem) {
            let myBody = document.getElementById('mybody');

            let alert = document.createElement('div');
            alert.className = 'alert alert-' + tipo + ' mb-2';
            alert.role = 'alert';
            alert.id = 'msgAlerta';
            alert.style = 'position: absolute; top: 8%; right: 0;';
            alert.innerHTML = mensagem;
            myBody.appendChild(alert);

            window.scrollTo(0, 0);

            setTimeout(() => {
                $("#msgAlerta").remove();
            }, 2000);
        }
    </script>
    <script>
        const modalConfirmacao = (config) => {
            $("#modalConfirmacaoButton").unbind('click')
            $("#modalCancelarButton").unbind('click')
            $("#modalFecharButton").unbind('click')

            if (config.texto.length > 0) {
                $('#textoConfirmacao').html(config.texto)
            }

            if (config.esconderBotaoConfirmar) {
                $('#modalConfirmacaoButton').hide()
            } else {
                $('#modalConfirmacaoButton').show()
            }

            if (config.acaoConfirmar) {
                $("#modalConfirmacaoButton").disabled = true;
                $("#modalConfirmacaoButton").bind('click', config.acaoConfirmar)
            }

            if (config.acaoCancelar) {
                $("#modalConfirmacaoButton").disabled = false;
                $('#modalCancelarButton').bind('click', config.acaoCancelar)
            }

            if (config.acaoFechar) {
                $("#modalConfirmacaoButton").disabled = false;
                $('#modalFecharButton').bind('click', config.acaoFechar)
            }

            if (config.titulo) {
                $("#modalTitle").text(config.titulo)
            }

            if (config.labelCancelar) {
