@model VendasViewModel;
@{
    ViewData["Title"] = Model.Acao == "E" ? "Editar Venda" : Model.Acao == "I" ? "Cadastrar Venda" : "Visualizar Venda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner p-0">
    <div class="container-fluid">
        <form action="@Url.Action("Salvar")"
        method="post"
        id="formVendas">
            <div class="card">
                <div class="card-body">
                    <div class="card-header d-flex justify-content-start top-h flex-column align-items-start">
                        <h2 class="content-header-title float-left mb-0">@ViewData["Title"]</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Vendas")">Vendas</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                            </ol>
                        </nav>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xl-1 col-lg-1 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Id</label>
                                <input type="text"
                                class="form-control"
                                name="id"
                                id="id"
                                value="@Model.Vendas!.Id"
                                readonly />
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Protocolo</label>
                                <input type="text"
                                class="form-control"
                                name="protocoloVenda"
                                id="protocoloVenda"
                                value="@Model.Vendas!.ProtocoloVenda"
                                readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Cliente</label>
                                <select class="form-select"
                                name="clienteId"
                                id="clienteId"
                                @(Model.Acao == "V" ? "disabled" : string.Empty)
                                required>
                                    <option value="-1">Selecione um Cliente</option>
                                    @foreach (var obj in Model.ListaCliente!)
                                    {
                                        if (obj.Id == Model.Vendas.ClienteId)
                                        {
                                            <option value="@obj.Id" selected>@obj.Cpf @obj.Nome</option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Id">@obj.Cpf @obj.Nome</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Concessionária</label>
                                <select class="form-select"
                                name="concessionariaId"
                                id="concessionariaId"
                                @(Model.Acao == "V" ? "disabled" : string.Empty)
                                required>
                                    <option value="-1">Selecione uma Concessionária</option>
                                    @foreach (var obj in Model.ListaConcessionaria!)
                                    {
                                        if (obj.Id == Model.Vendas.ConcessionariaId)
                                        {
                                            <option value="@obj.Id" selected>@obj.Nome @obj.Cidade/@obj.Uf</option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Id">@obj.Nome @obj.Cidade/@obj.Uf</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Fabricante</label>
                                <select class="form-select"
                                name="fabricanteId"
                                id="fabricanteId"
                                @(Model.Acao == "V" ? "disabled" : string.Empty)
                                required>
                                    <option value="-1">Selecione um Fabricante</option>
                                    @foreach (var obj in Model.ListaFabricante!)
                                    {
                                        if (obj.Id == Model.Vendas.Veiculo!.FabricanteId)
                                        {
                                            <option value="@obj.Id" selected>@obj.Nome</option>
                                        }
                                        else
                                        {
                                            <option value="@obj.Id">@obj.Nome</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Veículo*</label>
                                <select class="form-select"
                                name="veiculoId"
                                id="veiculoId"
                                @(Model.Acao == "V" ? "disabled" : string.Empty)
                                required>
                                    <option value="-1">Selecione um Veículo</option>
                                    @if (Model.ListaVeiculo != null)
                                    {
                                        @foreach (var obj in Model.ListaVeiculo!)
                                        {
                                            if (obj.Id == Model.Vendas.VeiculoId)
                                            {
                                                <option value="@obj.Id" selected>@obj.Modelo @obj.AnoFabricacao</option>
                                            }
                                            else
                                            {
                                                <option value="@obj.Id">@obj.Modelo @obj.AnoFabricacao</option>
                                            }
                                        }
                                    }                                    
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Data Venda</label>
                                <input type="date"
                                       class="form-control"
                                       name="dataVenda"
                                       id="dataVenda"
                                       value="@Model.Vendas!.DataVenda.ToString("yyyy-MM-dd")"
                                       @(Model.Acao == "V" ? "disabled" : string.Empty)
                                       required />
                            </div>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <label>Preço</label>
                                <input type="text"
                                       class="form-control"
                                       name="precoVenda"
                                       id="precoVenda"
                                       value="@Model.Vendas!.PrecoVenda.ToString("N2")"
                                       @(Model.Acao == "V" ? "disabled" : string.Empty)
                                       required />
                            </div>
                        </div>
                    </div>

                </div>
                <br />
                <div class="card-footer">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 text-center">
                        <button type="submit"
                                class="btn btn-primary"
                                id="btnSalvar"
                                @(Model.Acao == "V" ? "hidden" : string.Empty)>
                            Salvar
                        </button>
                        <a href="@Url.Action("Index", "Vendas")"
                           class="btn btn-secondary">
                            @(Model.Acao == "V" ? "Fechar" : "Cancelar")
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/jquery.mask.min.js"></script>
<script src="/views/vendas.cadastro.js"></script>
